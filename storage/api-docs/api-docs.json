{
    "openapi": "3.0.0",
    "info": {
        "title": "Dokumentasi API Aplikasi PKB",
        "description": "ini adalah dokumentasi API Aplikasi PKB untuk integrasi dengan sistem PKB",
        "termsOfService": "http://lpjk.pu.go.id/pkb/terms/",
        "contact": {
            "email": "admin@lpjk.net"
        },
        "license": {
            "name": "Apache 2.0",
